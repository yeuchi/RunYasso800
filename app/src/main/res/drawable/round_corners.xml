<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle"   >

            <solid
                android:color="#EEEEEE" >
            </solid>

            <stroke
                android:width="2dp"
                android:color="#FFFFFF" >
            </stroke>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="11dp"   >
            </corners>

        </shape>
    </item>
</layer-list>